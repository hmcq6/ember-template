<div class="row">
  <div class="col">
    <table class="table table-sm table-bordered">
      <tr>
        <td>Tag</td>
      </tr>
      {{#each model as |tag|}}
        <tr>
          <td>
            {{tag.name}}
          </td>
        </tr>
      {{/each}}
    </table>
  </div>
</div>

<form {{action "addTag" on="submit"}}>
  <label>Name: </label>
  {{input value=name class="form-control"}}
  <button type="submit" class="btn btn-primary">Add Tag</button>
</form>

{{outlet}}
