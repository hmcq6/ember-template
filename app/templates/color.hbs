<div class="row">
  <div class="col text-right">
    {{#bs-button type="primary" onClick=(action "openModal")}}Add Color+{{/bs-button}}
  </div>
</div>

<div class="row">
  <div class="col">
    <table class="table table-sm table-bordered">
      <tr>
        <td>Color</td>
      </tr>
      {{#each model as |color|}}
        <tr>
          <td>
            {{color.name}}
          </td>
        </tr>
      {{/each}}
    </table>
  </div>
</div>

{{#bs-modal open=isModalOpen onHidden=(action "modalClosed")}}
  <div class="modal-body">
    <form {{action "addColor" on="submit"}}>
      <label>Name: </label>
      {{input value=name class="form-control"}}
      <label>Hex Value: </label>
      {{input value=hex class="form-control"}}
      <button type="submit" class="btn btn-success">Add Color</button>
    </form>
  </div>
{{/bs-modal}}

{{outlet}}
